<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EndGameFragment"
        android:background="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="32dp"
                app:cardElevation="0dp"
                android:id="@+id/endGameCardView"
                app:cardBackgroundColor="@color/colorCardBackground"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RatingBar
                        android:layout_width="wrap_content"
                        android:id="@+id/endGameCardRatingBar"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView4"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_height="24dp"
                        android:focusable="false"
                        android:rating="0"
                        android:stepSize="0.5"
                        style="@style/customRatingBar"
                        android:theme="@style/customRatingBar"
                        android:isIndicator="true"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        app:layout_constraintTop_toTopOf="@+id/textView4"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:textSize="16sp"
                        android:textColor="@android:color/background_light"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="@string/obtanined_score_label"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintTop_toBottomOf="@+id/endGameLabel"
                        android:layout_marginTop="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/endGameCardRatingBar"
                        app:layout_constraintBottom_toTopOf="@+id/textView5"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textSize="16sp"
                        android:textColor="@android:color/background_light"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="@string/correct_answers_label"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toStartOf="@+id/endGameCorrectAnswers"
                        android:textAlignment="textStart"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/endGameNewRecordGroup"/>

                <TextView
                        android:text="@string/endgame_engdame_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endGameLabel"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        android:textColor="@color/colorAccent4"
                        android:textSize="20sp" app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/textView4"
                        app:layout_constraintVertical_chainStyle="packed"/>

                <Button
                        android:text="@string/endgame_back_to_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endGameButton"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textSize="20sp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@+id/endGameNewRecordGroup"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:textColor="@android:color/background_light"/>

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        android:layout_marginTop="24dp"
                        android:id="@+id/endGameNewRecordGroup"
                        android:visibility="gone"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintBottom_toTopOf="@+id/endGameButton">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccent4"
                            android:fontFamily="@font/comfortaa_bold"
                            android:text="@string/new_label_record"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:textAlignment="center"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/endGamePointsObtined"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccent2"
                            android:fontFamily="@font/comfortaa_bold"
                            android:text="@string/default_new_score_placeholder"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            android:textAlignment="textEnd"
                            android:layout_marginStart="24dp"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/textView13"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView6"
                            app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"
                            android:text="@string/points_label"
                            android:textAlignment="textStart"
                            app:layout_constraintTop_toTopOf="@+id/endGamePointsObtined"
                            app:layout_constraintBottom_toBottomOf="@+id/endGamePointsObtined"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintStart_toEndOf="@+id/endGamePointsObtined"
                            android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.5"/>

                </android.support.constraint.ConstraintLayout>

                <TextView
                        android:text="@string/default_num_answers_placeholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/endGameCorrectAnswers"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintTop_toTopOf="@+id/textView5"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5"
                        android:textSize="16sp"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintStart_toEndOf="@+id/textView5"
                        android:textAlignment="textEnd"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginStart="8dp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>

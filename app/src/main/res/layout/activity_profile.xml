<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/gradient_background">

    <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            android:id="@+id/profileAppBar"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp">

        <android.support.v7.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:padding="0dp"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
            android:id="@+id/profileScroll">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Nickname y dificultad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="48dp"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/comfortaa_bold" app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp" android:id="@+id/profileDataCardView"
                    app:cardBackgroundColor="@color/colorCardBackground"
                    app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:focusedByDefault="false"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/profileNickNameEdit"
                            android:hint="@string/profile_nickname_hint"
                            android:maxLength="15"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"
                            style="@style/customEditText"
                            app:layout_constraintTop_toTopOf="@+id/profileChangeNicknameBtn"
                            android:singleLine="true"
                            android:theme="@style/customEditText"
                            app:layout_constraintBottom_toBottomOf="@+id/profileChangeNicknameBtn"
                            android:visibility="gone"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/profileChangeNicknameBtn"
                            app:layout_constraintStart_toEndOf="@+id/profileNicknameIcon"
                    />
                    <TextView
                            android:text="Error"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/profileNicknameErrorLabel"
                            app:layout_constraintTop_toBottomOf="@+id/profileChangeNicknameBtn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textColor="@color/colorNoTick" android:visibility="gone"
                            android:layout_marginTop="8dp" android:layout_marginEnd="24dp"
                            android:layout_marginStart="28dp"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_round_edit_24px_white"
                            android:id="@+id/profileChangeNicknameBtn"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            android:tint="@android:color/background_light"
                            android:layout_marginTop="36dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="24dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:theme="@style/customSeekBar"
                            android:id="@+id/profile_seekBar"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:max="2"
                            style="@style/Widget.AppCompat.SeekBar"
                            android:layout_marginTop="48dp"
                            app:layout_constraintTop_toBottomOf="@+id/profileChangeNicknameBtn"/>
                    <TextView
                            android:text="@string/profile_seekbar_easy_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/textView7"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/profile_seekBar"
                            android:textAlignment="viewStart"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/textView8"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            android:layout_marginStart="24dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"/>
                    <TextView
                            android:text="@string/profile_seekbar_medium_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/profile_seekBar"
                            app:layout_constraintEnd_toStartOf="@+id/textView9"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/textView7"
                            android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold" android:layout_marginBottom="32dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                            android:text="@string/profile_seekbar_hard_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/textView9"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/profile_seekBar"
                            android:textAlignment="textEnd"
                            app:layout_constraintStart_toEndOf="@+id/textView8"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:layout_marginEnd="24dp"
                            android:textSize="14sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"/>
                    <TextView
                            android:text="Nickname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/profileNickName"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/profileChangeNicknameBtn"
                            app:layout_constraintBottom_toBottomOf="@+id/profileChangeNicknameBtn"
                            app:layout_constraintEnd_toStartOf="@+id/profileChangeNicknameBtn"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textColor="@android:color/background_light" android:visibility="visible"
                            app:layout_constraintStart_toEndOf="@+id/profileNicknameIcon" android:textSize="16sp"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_man_user"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            android:id="@+id/profileNicknameIcon"
                            app:layout_constraintTop_toTopOf="@+id/profileChangeNicknameBtn"
                            app:layout_constraintBottom_toBottomOf="@+id/profileChangeNicknameBtn"
                            android:tint="@color/colorAccent3"
                            android:visibility="visible"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <TextView
                    android:text="@string/profile_global_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="48dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="48dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/comfortaa_bold"
                    app:layout_constraintTop_toBottomOf="@+id/profileDataCardView" android:layout_marginTop="24dp"/>


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="30dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    android:id="@+id/profileGlobalCardView" app:cardBackgroundColor="@color/colorCardBackground"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@+id/imageView2"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/profilePuntuacionGlobalText"
                            android:layout_marginEnd="8dp" android:text="@string/profile_puntuacion_label"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"/>
                    <TextView
                            android:text="100005554"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profilePuntuacionGlobalText"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintStart_toEndOf="@+id/textView4"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/textView4"
                            app:layout_constraintBottom_toBottomOf="@+id/textView4"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_favourites_filled_star_symbol"
                            android:id="@+id/imageView2"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="@+id/textView4"
                            app:layout_constraintBottom_toBottomOf="@+id/textView4"
                            android:tint="@color/colorAccent2"/>
                    <TextView
                            android:text="@string/profile_ranking_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:layout_marginTop="48dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            app:layout_constraintStart_toEndOf="@+id/imageView5"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold" android:layout_marginBottom="32dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toStartOf="@+id/profileRanking"
                            app:layout_constraintHorizontal_chainStyle="spread_inside" android:layout_marginEnd="8dp"/>
                    <TextView
                            android:text="150"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profileRanking"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp"
                            app:layout_constraintTop_toTopOf="@+id/textView12"
                            app:layout_constraintBottom_toBottomOf="@+id/textView12"
                            app:layout_constraintStart_toEndOf="@+id/textView12"
                            android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:textSize="16sp"
                            android:textColor="@android:color/background_light"
                            android:fontFamily="@font/comfortaa_bold"/>
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_favourites_filled_star_symbol"
                            android:id="@+id/imageView5"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="24dp"
                            app:layout_constraintTop_toTopOf="@+id/textView12"
                            app:layout_constraintBottom_toBottomOf="@+id/textView12"
                            android:tint="@color/colorAccent2"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

            <TextView
                    android:text="@string/profile_specific_score_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/profileSpecificScoreLabel"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/background_light"
                    android:fontFamily="@font/comfortaa_bold"
                    app:layout_constraintTop_toBottomOf="@+id/profileGlobalCardView" android:layout_marginTop="24dp"/>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileSpecificScoreLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="30dp"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="0dp"
                    android:id="@+id/profileSpecificCardView" android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/colorCardBackground" android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ProgressBar
                            style="@style/customSpinner"
                            android:theme="@style/customSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/progressBar2" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="24dp" android:layout_marginTop="32dp"
                            android:layout_marginBottom="32dp" android:layout_marginStart="24dp"
                    />
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>